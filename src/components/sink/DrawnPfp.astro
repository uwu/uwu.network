<svg class={Astro.props.class} width="160px" height="160px"  version="1.1" viewBox="0 0 160 160" xmlns="http://www.w3.org/2000/svg">
  <path id="btm" d="m0 160h160v-40l-40 40v-40l-40 40v-40l-40 40v-40z" />
  <path id="top" d="m0 120h80v-80h40v40l40-40h-40l40-40h-40l-40 40v-40l-40 40h40l-40 40h40l-40 40v-120h-40z" />
</svg>

<style>
  path {
    fill: none;
    stroke: white;
  }

  #btm {
    stroke-dasharray: 547px;
    stroke-dashoffset: 547px;
  }

  #top {
    stroke-dasharray: 1165px;
    stroke-dashoffset: 1165px;
  }
</style>

<script>
  import { EASE } from "crossani";

  const btm = document.getElementById("btm");
  const top = document.getElementById("top");

  btm.transitions = [
    {
      state: { "stroke-dashoffset": 0 },
      ms: 2000,
      easing: EASE.in
    }
  ];

  top.transitions = [
    {
      state: { "stroke-dashoffset": 0 },
      // gotta keep a consistent speed :)
      ms: 2000 * (106 / 55),
      easing: EASE.out
    }
  ];

  btm.doTransition(0)
    .then(() => top.doTransition(0));
</script>