---
import IbmPlexSans from "../components/IbmPlex.astro";
import BaseLayout from "./BaseLayout.astro";

interface Props {
	title?: string;
}

const title = Astro.props.title ?? "uwu";
---

<BaseLayout title={title} class="bg-black text-white h-screen">
	<IbmPlexSans slot="head" />
	
	<slot />

	<style slot="head" is:inline>
		pre {
			font-family: "IBM Plex Mono", monospace !important;
		}
	</style>
</BaseLayout>
